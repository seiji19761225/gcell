#=======================================================================
# makefile
# $Id: Makefile,v 1.1.1.1 2020/08/05 00:00:00 seiji Exp seiji $
#=======================================================================
.SUFFIXES: .f .o
SHELL	= /bin/sh
#-----------------------------------------------------------------------
FC	= ftn
FFLAGS	= -O3 -rm
LIBS	= 
#-----------------------------------------------------------------------
SRC	= gcell.f
OBJ	= $(subst .f,.o,$(SRC))
BIN	= gcell
#-----------------------------------------------------------------------
.f.o:
	$(FC) $(FFLAGS) -c -o $@ $<
#-----------------------------------------------------------------------
$(BIN): $(OBJ)
	$(FC) $(FFLAGS) -o $@ $^ $(LIBS)

clean:
	rm -f *.o *.lst core* *~
	rm -f $(BIN)
#-----------------------------------------------------------------------
-include addon.mk
